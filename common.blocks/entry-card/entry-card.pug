include ../text-field/text-field.pug
include ../buttons/buttons.pug
mixin entryCard
    .entry-card 
        h1.entry-card__header Войти
        form
            .entry-card__text-inputs
                .entry-card__email-input 
                    +textField({placeholder: 'Email', type: 'email'})
                .entry-card__password-input
                    +textField({placeholder: 'Пароль', type: 'password'})
            .entry-card__enter-button 
                +button({type: 'button_long', text: 'войти'})
        .entry-card__registration-section 
            .text Нет аккаунта на Toxin?
            +button({type: 'button_empty js-card-switch-button', text: 'создать'})

