include ../text-field/text-field.pug
mixin footer 
    footer.footer 
        .footer__content 
            .footer__company-description 
                .footer__logo 
                    img(src=require('../common.blocks/footer/img/logo.svg'))
                p.footer__description-text Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
            .footer__navigation 
                h3.footer__nav-header навигация
                a(href="/mock-address/change-me").footer__text-aboutus О нас
                a(href="/mock-address/change-me").footer__text-news Новости
                a(href="/mock-address/change-me").footer__text-support Служба поддержки
                a(href="/mock-address/change-me").footer__text-services Услуги
            .footer__about-us
                h3.footer__about-us-header О нас   
                a(href="/mock-address/change-me").footer__text-aboutservices О сервисе
                a(href="/mock-address/change-me").footer__text-team Наша команда
                a(href="/mock-address/change-me").footer__text-vacancies Вакансии
                a(href="/mock-address/change-me").footer__text-investors Инвесторы
            .footer__support 
                h3.footer__support-header служба поддержки
                a(href="/mock-address/change-me").footer__text-agreements Соглашения
                a(href="/mock-address/change-me").footer__text-communities Сообщества
                a(href="/mock-address/change-me").footer__text-contacts Связь с нами
            .footer__subscription 
                h3.footer__subscription-header подписка   
                p.footer__text-subscription Получайте специальные предложения и новости сервиса
                .footer__text-field 
                    +textField({modif: 'text-field_subscription-footer', placeholder: 'Email', type: 'email'})
        .footer__copyright-block 
            .footer__copyright-text Copyright © 2018 Toxin отель. Все права защищены.
            .footer__icons 
                a(href='https://twitter.com/kiswerd')
                    span.fab.fa-twitter
                span.fab.fa-facebook-square
                a(href='https://www.instagram.com/sikera4/')
                    span.fab.fa-instagram




                    
